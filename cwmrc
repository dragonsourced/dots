# Settings.

fontname "Charter:size=10"

color menubg '#191919'
color font '#f5f5f5'

color menufg '#f5f5f5'
color selfont '#191919'

snapdist 12
gap 20 20 20 20
borderwidth 0

ignore dock
ignore menu

# I'm not going to bother typing CM, ever.

bind-key M-n window-menu-label

bind-key M-0 group-toggle-0
bind-key M-1 group-toggle-1
bind-key M-2 group-toggle-2
bind-key M-3 group-toggle-3
bind-key M-4 group-toggle-4
bind-key M-5 group-toggle-5
bind-key M-6 group-toggle-6
bind-key M-7 group-toggle-7
bind-key M-8 group-toggle-8
bind-key M-9 group-toggle-9

bind-key MS-0 window-movetogroup-0
bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3
bind-key MS-4 window-movetogroup-4
bind-key MS-5 window-movetogroup-5
bind-key MS-6 window-movetogroup-6
bind-key MS-7 window-movetogroup-7
bind-key MS-8 window-movetogroup-8
bind-key MS-9 window-movetogroup-9

# Applications.

bind-key Print "scrot '%Y-%m-%d_$wx$h.png'"

bind-key 4-y 'ytc'
bind-key 4-r 'xterm -e rss new'
bind-key 4-R 'xterm -e rss'
bind-key 4-t 'theme menu'
bind-key 4-b 'bluetooth'
bind-key 4-p 'menu_run'
bind-key 4-s 'scr'

# Volume.

bind-key XF86AudioRaiseVolume 'chvol 5%+'
bind-key XF86AudioLowerVolume 'chvol 5%-'
bind-key XF86AudioMute 'chvol toggle'

# Volume, for keyboards without a FN key.

bind-key 4-F6 'chvol 5%+'
bind-key 4-F5 'chvol 5%-'
bind-key 4-F4 'chvol toggle'

# Keybindings for native CWM functionality, as
# opposed to external applications.

bind-key M-f window-fullscreen
bind-key M-m window-maximize
bind-key M-q window-delete
bind-key M-c mvwin center
bind-mouse M-3 window-resize

bind-key M-w menu-window
bind-key M-e menu-exec
bind-key M-g menu-group

bind-key M-d terminal

bind-key M-v window-vtile
bind-key M-h window-htile

bind-key M-r restart
